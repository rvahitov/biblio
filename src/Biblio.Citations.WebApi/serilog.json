{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "System": "Error",
                "Microsoft": "Warning",
                "Akka": "Warning"
            }
        },
        "Filter": [
            {
                "Name": "ByExcluding",
                "Args": {
                    "expression": "RequestPath like '/health%'"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ],
        "WriteTo:Console": {
            "Name": "Console"
        },
        "WriteTo:OpenTelemetry": {
            "Name": "Conditional",
            "Args": {
                "expression": "@l in ['Information','Warning', 'Error', 'Fatal']",
                "configureSink": [
                    {
                        "Name": "OpenTelemetry"
                    }
                ]
            }
        }
    }
}